<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic6"
    tools:context="com.forexexpress.LocationOption">


    <Button
        android:id="@+id/address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/directions"
        android:layout_alignLeft="@+id/directions"
        android:layout_alignStart="@+id/directions"
        android:layout_marginBottom="148dp"
        android:background="@drawable/button_location_graphics"
        android:text="Adress and Contacts"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/directions"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_location_graphics"
        android:layout_width="300dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:text="Get Directions"
        tools:ignore="HardcodedText" />
</RelativeLayout>
